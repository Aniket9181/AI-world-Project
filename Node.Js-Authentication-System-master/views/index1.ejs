  <!-- About us Section -->
  <section class="about_us_container">
    <h2 class="about_us_heading">
      About Us
    </h2>

    <ul list="circle" class="about_us_paragraph">
      <li>
        <p class="aboutus_p">Making you aware about the recent development in AI field</p>
      </li>
      <li>
        <p class="aboutus_p">Taking and understanding your opinion to on the topic</p>
      </li>
      <li>
        <p class="aboutus_p">For weekly updates do login to our page</p>
      </li>
    </ul>
  </section>

  <!-- get In Touch Section -->
  <section class="getInTouch">
    <h2 class="getInTouch_heading">
      Get In Touch
    </h2>
    <div class="getInTouch_link">
      <a href="http://" target="_blank" rel="noopener noreferrer" class="getInTouch_connect_link"><i
          class="fa-brands fa-linkedin getInTouch_connect_link_main"></i></a>
      <a href="http://" target="_blank" rel="noopener noreferrer" class="getInTouch_connect_link"><i
          class="fa-brands fa-pinterest getInTouch_connect_link_main"></i></a>
      <a href="http://" target="_blank" rel="noopener noreferrer" class="getInTouch_connect_link"><i
          class="fa-brands fa-square-instagram getInTouch_connect_link_main"></i></a>
    </div>
  </section>

  <!-- footer Of the Page -->
  <section class="footer">
    <div class="ai_world_discription footer_cont">
      <h2> AI World</h2>
      <p>At AIWORLD we belive that customers should always get easy-to-use, best in the kind and fast services. AIWORLD
        has achieved standards which hepls customer to achieve satisfaction and realize value for their hard earned
        money</p>
    </div>
    <div class="ai_worldContactUs footer_cont">
      <h2>Contact Us</h2>
      <p>Call Us - 8866468649</p>
      <p>Email Us- anilbaraiya1980@gmail.com</p>
    </div>
    <div class="ai_world_subscription footer_cont">
      <h2>Scbscribe to get More Updates</h2>
      <form action="" method="post " id="subscription_form">
        <input type="text" name="subscrition_email" id="subscription_email" placeholder="Enter Your Email">
        <p>We'll never Share Your email with anyone else.</p>
        <button type="submit">Submit</button>

      </form>
    </div>

  </section>

  <!-- javaScript Code -->
  <script src="./script.js"></script>
</body>

</html>